<?xml version='1.0' encoding='utf-8'?>
<widget android-packageName="" android-versionCode="12" ios-CFBundleIdentifier="" ios-CFBundleVersion="0.1" version="0.1" xmlns="http:/www.w3.org/ns/widgets" xmlns:cdv="http:/cordova.apache.org/ns/1.0">
    <name>My App</name>
    <description>My awesome App</description>
    <author email="p.ryaposov@gmail.com" href="ryaposov.com">Pavel Ryaposov</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http:/*/*" />
    <allow-intent href="https:/*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="deployment-target" value="9.0" />
    <preference name="target-device" value="universal" />
    <platform name="browser">
        <access origin="*" />
    </platform>
    <allow-navigation href="*" />
    <preference name="BackupWebStorage" value="cloud" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="KeyboardResize" value="false" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <allow-navigation href="http://localhost:8080/*" />
    <feature name="CDVWKWebViewEngine">
        <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <plugin name="cordova-plugin-statusbar" spec="git+https://github.com/apache/cordova-plugin-statusbar.git" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
